[include]
	path = .gitconfig.local

[core]
	excludesfile = ~/.gitignore
	autocrlf = input
	editor = vim

[color]
	ui = auto

[color "branch"]
	current = red
	local = yellow
	remote = green

[color "diff"]
	meta = cyan
	frag = magenta
	old = red bold
	new = green bold

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[alias]
	st = status -sb
	ci = commit
	co = checkout
	br = branch
	cp = cherry-pick
	branches = branch -avv
	wtf = log --graph --all --pretty=format:\"%C(auto,yellow)%h%C(auto)%d%C(auto,reset)\\ by\\ %C(auto,blue)%an%C(auto,reset),\\ %C(auto,cyan)%ar%C(auto,reset)%n\\ %s%n\" --stat
	lg = log --graph --all --stat
	unci = uncommit
	uncommit = reset HEAD^
	ls = ls-files
	ps = push
	ll = lol
	lol = log --all --graph --decorate --pretty=oneline --abbrev-commit
	loll = log --all --graph --decorate --pretty=oneline --abbrev-commit --stat
  diffci = "!git diff $1^ $1^2"

[diff]
    tool = meld

[difftool]
    prompt = false

[difftool "meld"]
	cmd = meld \"$LOCAL\" \"$REMOTE\"

[push]
	default = current

[merge]
	tool = meld
[mergetool "meld"]
	cmd = meld --auto-merge \"$LOCAL\" \"$BASE\" \"$REMOTE\" --output \"$MERGED\" --label=Local --label=Base --label=Remote --diff \"$BASE\" \"$LOCAL\" --diff \"$BASE\" \"$REMOTE\"
[mergetool]
	prompt = false
[help]
	autocorrect = 30
