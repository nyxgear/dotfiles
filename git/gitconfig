[include]
	path = .gitconfig.local
[core]
	excludesfile = ~/.gitignore
	autocrlf = input
	editor = vim
[color]
	ui = auto
[color "branch"]
	current = red
	local = yellow
	remote = green
[color "diff"]
	meta = cyan
	frag = magenta
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[alias]
	st = status -sb
	ci = commit
	ck = checkout
	br = branch
	cp = cherry-pick
	branches = branch -vv
	wtf = log --pretty=format:"%C(auto,yellow)%h%C(auto)%d%C(auto,reset)\\ by\\ %C(auto,blue)%an%C(auto,reset),\\ %C(auto,cyan)%ar%C(auto,reset)%n\\ %s%n" --stat
	unci = reset HEAD^
	uncommit = reset HEAD^
	ls = ls-files
	ps = push
[diff]
    tool = meld
[difftool]
    prompt = false
[difftool "meld"]
    cmd = meld "$LOCAL" "$REMOTE"
[push]
	default = current

